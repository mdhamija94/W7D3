<h1>Sign In</h1>

<form action="<%= session_url %>" method="post">
  <label for="username">
    Username: <input type="text" id="username" name="user[username]">
  </label>

  <label for="password">
    Password: <input type="password" id="password" name="user[password]">
  </label>

  <input type="submit" value="Sign In">
</form>